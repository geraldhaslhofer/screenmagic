<Window x:Class="ScreenMagic.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScreenMagic"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel x:Name="Divider" Orientation="Vertical">
            <StackPanel x:Name="Divider2" Orientation="Vertical">
            <Button x:Name="Execute" Content="Execute" HorizontalAlignment="Left" Margin="25,35,0,0" VerticalAlignment="Top" Width="75" Click="Execute_Click"/>
            </StackPanel>
            <StackPanel x:Name="Divider3" Orientation="Vertical">
                <Image x:Name="MainImage" Height="350" Margin="25,25,25,25"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
