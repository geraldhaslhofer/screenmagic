<Window x:Class="ScreenMagic.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScreenMagic"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel x:Name="Divider" Orientation="Vertical" Margin="0,0,0,10.5">
            <StackPanel x:Name="Divider2" Orientation="Horizontal">
            <Button x:Name="Execute" Content="Update" HorizontalAlignment="Left" Margin="8,10,0,0" VerticalAlignment="Top" Width="75" Click="Execute_Click"/>
                <ComboBox x:Name="ScaleSelection" Width="117" Height="18" Margin="8,10,0,0" FontSize="8"/>

            </StackPanel>
            <StackPanel x:Name="Divider3" Orientation="Vertical">
                <Image x:Name="MainImage" Height="350" Margin="10,10,10,10" HorizontalAlignment="Left" VerticalAlignment="Top" Stretch="None"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
