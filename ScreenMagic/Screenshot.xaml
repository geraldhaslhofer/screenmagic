<Window x:Class="ScreenMagic.Screenshot"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScreenMagic"
        mc:Ignorable="d"
        Title="Screenshot" Height="64.455" Width="239.336"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        WindowStyle="None"
    
        
        >
    <Grid>
       
        <Image x:Name="MainImage" HorizontalAlignment="Left" VerticalAlignment="Top" Stretch="Uniform"/>
        <Button x:Name="Hide" Content="X" HorizontalAlignment="Right" Margin="8,10,10,10" VerticalAlignment="Top" Width="56" Click ="Hide_Click"/>

    </Grid>
</Window>
